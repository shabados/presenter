{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "useDefineForClassFields": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "sourceMap": true,
    "noImplicitAny": true
  },
  "include": [
    "apps",
    "packages",
    "*.ts",
    "*.tsx",
    "*.js",
    "__mocks__",
    "__utils__"
  ]
}
